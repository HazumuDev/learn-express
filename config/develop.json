{
    "server": {
        "port": 3000
    },
    "db": {
        "host": "localhost",
        "user": "dbuser",
        "password": "dbpassword",
        "database": "dbname",
        "timezone": "utc",
        "dateStrings": "date"
    },
    "log": {
        "appenders": [
            {
                "category": "access",
                "type": "dateFile",
                "filename": "./logs/access.log",
                "pattern": "-yyy-MM-dd"
            },
            {
                "category": "app",
                "type": "dataFile",
                "filename": "./logs/system.log",
                "pattern": "-yyyy-MM-dd"
            },
            {
                "category": "error",
                "type": "dateFile",
                "filename": "./logs/error.log",
                "pattern": "-yyyy-MM-dd"
            }
        ]
    }
}